<div class="container mt-3">
    <% if (pages > 0) { %>
        Movies per page
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-secondary active">
                <input type="radio" name="options" id="option1" autocomplete="off" checked> 10
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="options" id="option2" autocomplete="off"> 20
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="options" id="option3" autocomplete="off"> 30
            </label>
        </div>

        <nav aria-label="Page navigation">
            <ul class="pagination pagination-lg justify-content-center">
                <% if (current == 1) { %>
                    <li class="page-item disabled">
                        <a class="page-link">First</a>
                    </li>
                <% } else { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=1">First</a>
                    </li>
                <% } %>
                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                <% if (i !== 1) { %>
                    <li class="page-item disabled">
                        <a class="page-link">...</a>
                    </li>
                <% } %>
                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                    <% if (i == current) { %>
                        <li class="page-item active">
                                <span class="page-link">
                                    <%= i %>
                                    <span class="sr-only">(current)</span>
                                </span>
                        </li>
                    <% } else { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                        </li>
                    <% } %>
                    <% if (i == Number(current) + 4 && i < pages) { %>
                        <li class="page-item disabled">
                            <a class="page-link">...</a>
                        </li>
                    <% } %>
                <% } %>
                <% if (current == pages) { %>
                    <li class="page-item disabled">
                        <a class="page-link">Last</a>
                    </li>
                <% } else { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= pages %>">Last</a>
                    </li>
                <% } %>
            </ul>
        </nav>
    <% } %>
</div>