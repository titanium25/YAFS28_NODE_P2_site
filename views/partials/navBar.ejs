<!-- As a heading -->
<% if (name) { %>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h3">
                Welcome, <%= name %>. Credits left:
                <% if(isAdmin){%>
                    <i class="fas fa-infinity"></i>
                <% } else { %>
                    <%= credits %>
                <% }%>
            </span>
            <a href="/menu/logout" class="btn btn-outline-primary my-2 my-sm-0"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
    </nav>
<% } %>

