<script type="text/javascript">
    $(document).on("click", ".open-DeleteMovieDialog", function () {
        let movieId = $(this).data('id');
        let title = $(this).data('title');
        let image = $(this).data('image');
        console.log(image)
        $(".modal-footer #movieId").val(movieId);
        $(".modal-footer #title").val(title);
        $(".modal-footer #image").val(image);
        $(".modal-body span").text(title);

        document.getElementById("delete").disabled = true;

        /* event listener */
        document.getElementsByName("confirm")[0].addEventListener('change', doThing);


        /* function */
        function doThing() {
            if (document.getElementsByName("confirm")[0].value === ('delete ' + title))
                document.getElementById("delete").disabled = false;
        }
    });
</script>


<div class="row mt-5 justify-content-md-center">
    <div class="card-body">

        <h1 class="text-center mb-3">
            <i class="fas fa-video"></i> Movies
        </h1>
        <% include ./partials/messages.ejs %>

        <form class="form-inline" action="/menu/movies/" method="POST">

            <a href="/menu/movies" class="btn btn-secondary mr-1 disabled">
                <i class="fas fa-list"></i> All Movies
            </a>

            <a href="/menu/addMovie" class="btn btn-secondary mr-1 <% if(!permissions.cm){ %>disabled<% } %>">
                <i class="fas fa-plus-circle"></i> Add Movie
            </a>


            <input class="form-control mr-sm-2 input-sm w-25 pull-right " type="search" name="title"
                   placeholder="Find movie"
                   aria-label="Search">
            <button class="btn btn-outline-primary pull-right" type="submit">Search</button>
        </form>

        <% movies.forEach(function(m) { %>
            <div class="card flex-row flex-wrap mt-3">
                <div class="card-header border-0 w-20">
                    <img style="width: 190px; height: 260px; object-fit: cover;" src="
                    <% if(m.image) { %>
                        <%= m.image %>
                    <% } else { %>
                        /img/img.png
                    <% } %>
                    ">
                </div>
                <div class="card-block px-2 mt-3">
                    <h4 class="card-title"><%= m.name %>, <%= m.premiered.substring(0, 4) %></h4>
                    <p class="card-text">Genres: <%= m.genres %></p>

                    <!-- Button trigger delete modal -->
                    <a data-toggle="modal"
                       data-id="<%= m._id %>"
                       data-title="<%= m.name %>"
                       data-image="<%= m.image %>"
                       href="#deleteMovieModal"
                       class="open-DeleteMovieDialog btn btn-danger mr-1 float-right <% if(!permissions.dm){ %>disabled<% } %>">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>

                    <button type="button"
                            class="btn btn-info mr-1 float-right <% if(!permissions.um){ %>disabled<% } %>">
                        <i class="fas fa-edit"></i> Edit
                    </button>
                </div>
            </div>
        <% }) %>

    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteMovieModal" tabindex="-1" role="dialog"
     aria-labelledby="deleteMovieModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteMovieModalLabel">Are you absolutely
                    sure?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>This action cannot be undone. This will permanently delete the <b><span/></b>,
                    from the database. </p>
                <p>Please type <b>delete <span/></b> to confirm.</p>
                <input
                        type="text"
                        name="confirm"
                        class="form-control"
                        placeholder="Enter confirmation here"
                />
            </div>
            <div class="modal-footer">
                <form action="/menu/deleteMovieForm" method="POST">
                    <input type="hidden" name="movieId" id="movieId" value="movieId"/>
                    <input type="hidden" name="title" id="title" value="title"/>
                    <input type="hidden" name="image" id="image" value="image"/>
                    <button type="submit" id="delete" class="btn btn-block btn-danger">
                        I understand the consequences, delete this movie
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>